<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10pt">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="惩罚详情"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout7"
        android:layout_below="@+id/textView13"
        >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:text="惩罚名称："
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/punish_content"
            android:layout_alignBottom="@+id/punish_content"
            android:layout_toStartOf="@+id/punish_content"
            android:text="惩罚内容："
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/punish_cost"
            android:layout_alignBottom="@+id/punish_cost"
            android:layout_toStartOf="@+id/punish_cost"
            android:text="消耗点数："
            android:textSize="25sp" />

        <EditText
            android:id="@+id/punish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView18"
            android:layout_toEndOf="@+id/textView18"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/punish_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/punish_cost"
            android:layout_toEndOf="@+id/textView20"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/punish_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/punish_name"
            android:layout_below="@+id/punish_name"
            android:ems="10"
            android:inputType="textPersonName"
             />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_punish_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="完成" />

        <Button
            android:id="@+id/edit_punish_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回" />
    </LinearLayout>

</RelativeLayout>